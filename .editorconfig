# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*.sh]
indent_size = 2
shell_variant = bash

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab

[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single

[COMMIT_EDITMSG]
max_line_length = 72